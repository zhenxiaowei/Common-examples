<?xml version="1.0" encoding="UTF-8"?>
<root>
	<!-- 検索結果一覧の一覧表示最大件数 -->
	<item key="list_max">50</item>
	<!-- パスワード設定時の最低文字数 -->
	<item key="password_min">8</item>
	<!-- ユーザのパスワード有効期間を更新日からの日数で指定 -->
	<item key="password_period">60</item>
	<!-- 同時に実行可能なアップロード処理の最大数を指定 -->
	<item key="upload_max">10</item>
	<!-- 同時に実行可能なダウンロード処理の最大数を指定 -->
	<item key="download_max">10</item>
	<!-- セッション有効期限 -->
	<item key="session_period">120</item>
	<!-- ファイルサーバーのHOMEフォルダ (For Windows OS) -->
    <item key="rootDirForArchive">D:\archive</item>
    <!-- 　プレビューファイルビットレート -->
    <item key="preview_bit_rate">128</item>
</root>